         </font></Button>
      <ImageView fx:id="welcomeImageView" fitHeight="500.0" fitWidth="500.0" layoutX="30.0" layoutY="142.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../../sample/welcome.jpg" />
         </image>
      </ImageView>
      <Slider fx:id="geschwindigkeitSlider" blockIncrement="1.0" layoutX="114.0" layoutY="119.0" majorTickUnit="1.0" max="5.0" min="1.0" minorTickCount="1" prefHeight="45.0" prefWidth="424.0" showTickLabels="true" showTickMarks="true" visible="false" />
      <Label fx:id="geschwindigkeitLabel" layoutX="114.0" layoutY="66.0" prefHeight="28.0" prefWidth="424.0" text="WÄHLE DIE GESCHWINDIGKEIT DEINES PACMANs:" visible="false">
