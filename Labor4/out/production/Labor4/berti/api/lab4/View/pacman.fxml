      <Label fx:id="anzahlGeisterLabel" layoutX="100.0" layoutY="286.0" prefHeight="17.0" prefWidth="424.0" text="WÄHLE DIE ANZAHL DER GEISTERN: " visible="false">
         <font>
            <Font name="Impact" size="22.0" />
         </font>
      </Label>
      <ImageView fx:id="geisterImageView" fitHeight="150.0" fitWidth="200.0" layoutX="396.0" layoutY="314.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../../../../sample/fantomitaBefore.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="geisterTextView" layoutX="100.0" layoutY="332.0" prefHeight="25.0" prefWidth="72.0" visible="false">
         <font>
            <Font name="Times New Roman" size="14.0" />
         </font></TextField>
      <Button fx:id="playButton" layoutX="538.0" layoutY="464.0" mnemonicParsing="false" style="-fx-background-color: yellow;" text="PLAY" textFill="#ee0b0b" visible="false" onAction="#playButonPressed">
         <font>
            <Font name="Impact" size="24.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
