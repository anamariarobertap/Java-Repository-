<AnchorPane fx:id="anchorPane" prefHeight="547.0" prefWidth="638.0" style="-fx-background-color: #847efc;" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="berti.api.lab4.view.Controller">
